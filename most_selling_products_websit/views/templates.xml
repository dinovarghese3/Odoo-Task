<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="homepage_inherit_product_display"
              inherit_id="website.homepage" name="Products" active="True"
              customize_show="True">
        <data inherit_id="website.homepage">
            <xpath expr="//div[@id='wrap']" position="replace">
                <input type="hidden" name="csrf_token"
                       t-att-value="request.csrf_token()"/>
                <div class="container mt32 mb64">
                    <section>
                        <div class="product_details">
                            <center>
                                <t t-if="website_most_selle_product_ids">
                                <h3>Top Selling Products</h3>
                                </t>
                            </center>
                        </div>
                        <br/>
                        <div class="oe_product_cart_new row"
                             style="overflow: hidden;">
                            <t t-foreach="website_most_selle_product_ids"
                               t-as="website_product_id">
                                <div class="col-md-3 col-sm-4 col-xs-12"
                                     style="padding:1px 1px 1px 1px;">
                                    <a t-attf-href="/shop/product/#{ slug(website_product_id) }">
                                        <div style="border: 1px solid #f0eaea;width: 150px;height: auto;padding: 7% 0% 10% 0%;
                                    border-radius: 3px;overflow: hidden;
                                    margin-bottom: 44px !important;width: 100%;height: 100%;">
                                            <div class="oe_product_image">
                                                <center>
                                                    <div style="width:100%; height:145px;overflow: hidden;">
                                                        <img t-if="website_product_id.image_1920"
                                                             t-attf-src="/web/image/product.template/#{website_product_id.id}/image_1920"
                                                             class="img oe_product_image"
                                                             style="padding: 0px; margin: 0px; width:auto; height:100%;"/>
                                                    </div>
                                                    <div style="text-align: left;margin: 10px 15px 3px 15px;">

                                                        <t t-if="website_product_id.name">
                                                            <center><span t-esc="website_product_id.id"
                                                                  style="font-weight: bolder;color: #3e3b3b;"/></center>
                                                            <br/>
                                                        </t>
                                                        <!--                                                        <t t-if="website_product_id.name">-->
                                                        <!--                                                            <span t-esc="website_product_id.currency_id.symbol"-->
                                                        <!--                                                                  style="color:black"/>-->
                                                        <!--                                                            <span t-esc="website_product_id.list_price"-->
                                                        <!--                                                                  style="font-weight: bolder;color: #3e3b3b;"/>-->
                                                        <!--                                                            <br/>-->
                                                        <!--                                                        </t>-->

                                                    </div>
                                                    <a style="background-color: #666699;color: white;width: 76%;left: 12%;
                                                                                               height: 39px;display: block;padding: 11px 1px 1px 1px;font-size: 11px;
                                                                                               border-radius: 3px;margin-top: 10px;text-decoration: none;
                                                                                               position: absolute;bottom: 15px;"
                                                       t-attf-href="/shop/product/#{ slug(website_product_id) }">
                                                        <h6>Buy</h6>
                                                    </a>
                                                </center>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </t>
                        </div>
                        <br/><br/>
                        <div class="product_details">
                            <center>
                                <h3>Most Viewed Products </h3>
                            </center>
                        </div>
                        <br/><br/>
                        <div class="oe_product_cart_new row"
                             style="overflow: hidden;">
                            <t t-foreach="products_most_vist" t-as="website_product_id">
                                <div class="col-md-3 col-sm-4 col-xs-12"
                                     style="padding:1px 1px 1px 1px;">
                                    <a t-attf-href="/shop/product/#{ slug(website_product_id) }">
                                        <div style="border: 1px solid #f0eaea;width: 150px;height: auto;padding: 7% 0% 10% 0%;
                                    border-radius: 3px;overflow: hidden;
                                    margin-bottom: 44px !important;width: 100%;height: 100%;">
                                            <div class="oe_product_image">
                                                <center>
                                                    <div style="width:100%; height:145px;overflow: hidden;">
                                                        <img t-if="website_product_id.image_1920"
                                                             t-attf-src="/web/image/product.template/#{website_product_id.id}/image_1920"
                                                             class="img oe_product_image"
                                                             style="padding: 0px; margin: 0px; width:auto; height:100%;"/>
                                                        <span t-esc="website_product_id.name"></span>
                                                    </div>
                                                    <div style="text-align: left;margin: 10px 15px 3px 15px;">

                                                        <t t-if="website_product_id.name">
                                                            <center><span t-esc="website_product_id.name"
                                                                  style="font-weight: bolder;color: #3e3b3b;"/></center>
                                                            <br/>
                                                        </t>
                                                        <!--                                                        <t t-if="website_product_id.name">-->
                                                        <!--                                                            <span t-esc="website_product_id.currency_id.symbol"-->
                                                        <!--                                                                  style="color:black"/>-->
                                                        <!--                                                            <span t-esc="website_product_id.list_price"-->
                                                        <!--                                                                  style="font-weight: bolder;color: #3e3b3b;"/>-->
                                                        <!--                                                            <br/>-->
                                                        <!--                                                        </t>-->

                                                    </div>
                                                    <a style="background-color: #666699;color: white;width: 76%;left: 12%;
                                                                                               height: 39px;display: block;padding: 11px 1px 1px 1px;font-size: 11px;
                                                                                               border-radius: 3px;margin-top: 10px;text-decoration: none;
                                                                                               position: absolute;bottom: 15px;"
                                                       t-attf-href="/shop/product/#{ slug(website_product_id) }"><h6>
                                                        Buy</h6>
                                                    </a>
                                                </center>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </t>
                        </div>
                    </section>
                    <br/>
                    <hr class="border-600 s_hr_1px w-100 mx-auto s_hr_dotted"/>
                </div>
            </xpath>
        </data>
    </template>
</odoo>