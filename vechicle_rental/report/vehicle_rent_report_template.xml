<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="rental_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <h2 align="center">Vehicle Rental</h2>
                <div class="page">
                    <strong>
                        Report Date:<span t-esc="date_today"/>
                        <br/>
                        <span t-if="vehicle_id">
                            Vehicle :
                            <span t-esc="vehicle_id"/><br/>
                        </span>
                        <div style="text-align:left;">
                            <span t-if="from_date" style="margin-right:30px">
                                From Date:
                                <span t-esc="from_date"/>
                            </span>
                            <span t-if="to_date">
                                To Date:
                                <span t-esc="to_date"/>
                            </span>
                        </div>
                    </strong>

                    <div class="oe_structure"/>
                    <div class="row">
                        <table class="table table-condensed">
                            <head>
                                <tr>
                                    <th style="text-align:left;"><strong>
                                        Serial No:</strong></th>
                                    <th style="text-align:left;"><strong>
                                        Customer:</strong></th>
                                    <th style="text-align:left;"><strong>
                                        <span t-if="not vehicle_id">
                                        Vehicle:</span>
                                    </strong></th>
                                    <th style="text-align:left;"><strong>
                                        Model</strong></th>
                                    <th style="text-align:left;"><strong>
                                        From Date:
                                    </strong></th>
                                    <th style="text-align:left;"><strong>
                                        To Date:</strong></th>
                                    <th style="text-align:left;"><strong>
                                        State</strong></th>
                                </tr>
                            </head>
                            <body>
                                <t t-foreach="docs" t-as="data">
                                    <tr>
                                        <td style="text-align:left;">
                                            <t t-esc="data_index+1"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="data['name']"/>
                                        </td>
                                        <td>
                                        <span t-if="not vehicle_id">
                                            <t t-esc="data['vehicle_name']"/>
                                        </span>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="data['model']"/>
                                        </td>

                                        <td style="text-align:left;">
                                            <t t-esc="data['from_date']"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="data['to_date']"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="data['state']"/>
                                        </td>
                                    </tr>
                                </t>
                            </body>
                        </table>
                    </div>
                </div>
            </t>
        </t>

    </template>

</odoo>