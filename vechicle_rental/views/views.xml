        <!--        inherit-->
        <record id="fleet_inherit_registration_inherit" model="ir.ui.view">
            <field name="name">fleet.inherit.registrations</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <field name="first_contract_date" position="replace">
                    <field name="registration_date"/>
                </field>

            </field>
        </record>
        <!--        Group by and filter view-->
        <record id="vehicle_rental_group_by" model="ir.ui.view">
            <field name="name">vehicle.rental.group.view</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <search string="vehicle rent search">
                    <!--                    Search field-->
                    <field string="Name" name="name"
                           filter_domain="['|',('name', 'ilike', self),('brand_id', 'ilike', self)]"/>
                    <field  name="brand_id" />
                    <!--                    Group by-->
                    <group expand="1" string="Group by model">
                        <filter name="group_by_model" string="Model" domain="[]"
                                context="{'group_by':'model'}"/>
                        <filter name="_brand" string="Brand" domain="[]"
                                context="{'group_by':'brand_id'}"/>
                    </group>
                    <!--                    filter view-->
                    <filter name="filter_by_available" string="Available"
                            domain="[('state', '=','available')]"/>
                    <filter name="filter_by_notavailable" string="Not Available"
                            domain="[('state', '=','notavailable')]"/>

                </search>
            </field>
        </record>
        <!--        GroupBy search filter for rentrequest-->
        <record id="vehicle_request_group_by" model="ir.ui.view">
            <field name="name">vehicle.request.group.view</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <search string="Rent request search">
                    <!--                    search-->

                    <!--                    Group by-->
                    <group expand="1" string="Group by customer">
                        <filter name="group_by_customer" string="Customer"
                                domain="[]"
                                context="{'group_by':'customer_id'}"/>
                        <filter name="group_by_vehicle" string="Vehicle"
                                domain="[]"
                                context="{'group_by':'vehicle_id'}"/>
                        <filter name="group_by_state" string="State" domain="[]"
                                context="{'group_by':'state'}"/>
                    </group>

                    <!--                    filter view-->
                    <filter name="filter_by_draft" string="Draft"
                            domain="[('state', '=','draft')]"/>
                    <filter name="filter_by_confirm" string="Confirm"
                            domain="[('state', '=','confirm')]"/>
                    <filter name="filter_by_return" string="Return"
                            domain="[('state', '=','return')]"/>
                </search>
            </field>
        </record>
        <!--        kanban-->
        <record id="vehicle_kanban" model="ir.ui.view">
            <field name="name">vehicle.rental.kanban</field>
            <field name="model">vehicle.rental</field>

            <field name="arch" type="xml">
                <kanban class="vehicle_kanban_view" string="Rental">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="brand_id"/>
                    <field name="registration_date"/>
                    <field name="model"/>
                    <field name="rent"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card
                            oe_kanban_global_click">
                                <div class="o_kanban_content">
                                    <strong>
                                        <div class=
                                                     "oe_kanban_project_list
                                                     o_kanban_record_subtitle">
                                            <field name="name"/>
                                        </div>
                                    </strong>
                                    <div>
                                        Brand :
                                        <field name="brand_id"/>
                                    </div>
                                    <div>
                                        Type:
                                        <field name="vehicle_id"/>
                                    </div>
                                    <div>
                                        <field name="currency_id"
                                               invisible="True"/>
                                        <field name="rent" widget="monetary"
                                               options="
                                         {'currency_field': 'currency_id'}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--        Kanban view for Vehicle rental request-->
        <record id="vehicle_request_kanban" model="ir.ui.view">
            <field name="name">vehicle.request.kanban</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <kanban class="vehicle_kanban_view" string="Rental">

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card
                            oe_kanban_global_click">
                                <div class="o_kanban_content">
                                    <strong>
                                        <div class="oe_kanban_project_list
                                        o_kanban_record_subtitle">
                                            <field name="sequence"/>
                                        </div>
                                    </strong>
                                    <div>
                                        Customer :
                                        <field name="customer_id"/>
                                    </div>
                                    <div>
                                        Vehicle:
                                        <field name="vehicle_id"/>
                                    </div>
                                    <div>
                                        <field name="currency_id"
                                               invisible="True"/>
                                        <field name="rent" widget="monetary"
                                               options="
                                         {'currency_field': 'currency_id'}"/>
                                    </div>
                                    <div>
                                        <field name="state"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--        Tree view-->
        <record id="vehicle_tree" model="ir.ui.view">
            <field name="name">vehicle.rental.tree</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="brand_id"/>
                    <field name="registration_date" optional="hide"/>
                    <field name="model" optional="hide"/>
                    <field name="currency_id" invisible="True"/>
                    <field name="rent" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--        Rent Request Tree view-->
        <record id="vehicle_request_tree" model="ir.ui.view">
            <field name="name">vehicle.request.tree</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <tree string="Rental">
                    <field name="sequence"/>
                    <field name="customer_id"/>
                    <field name="vehicle_id"/>
                    <field name="request_date" optional="hide"/>
                    <field name="currency_id" invisible="True"/>
                    <field name="rent" widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="from_date" optional="hide"/>
                    <field name="to_date" optional="hide"/>
                    <field name="period"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--        form view -->
        <record id="vehicle_form" model="ir.ui.view">
            <field name="name">vehicle.rental.form</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <form string="Rental">
                    <header>
                        <field name="state" widget="statusbar"
                               options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="all_rental_requests"
                                    string="All requests" type="object"
                                    class="oe_stat_button" icon="fa-car" widget="statinfo">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_id"/>
                                 <field name="name"/>
                                <field name="brand_id"/>
                            </group>
                            <group>
                                <field name="registration_date"/>
                                <field name="model"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="rent" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
<!--                        pages-->
                        <notebook>
                            <page string="Rent Request">
                                <field name="all_request" filter_domain="[('vehicle_id','=','self)]"/>
                            </page>
                            <page string="Rent Charges">
                                <field name="rent_charges">
                                    <tree editable="Top" create="1" multi_edit="1">
                                        <field name="amount"/>
                                        <field name="time"/>
                                        <field name="period"/>
                                        <field name="vehicle_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--        form view for the rent request-->
        <record id="vehicle_request_form" model="ir.ui.view">
            <field name="name">vehicle.request.form</field>
            <field name="model">vehicle.request</field>
            <field name="arch" type="xml">
                <form string="Requests">
                    <header>
                        <button name="button_confirm" string="Confirm"
                                class="oe_highlight" type="object"
                                states="draft"/>
                        <button name="button_return" string="Return"
                                class="oe_highlight" type="object"
                                states="confirm"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirm,return"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="sequence"/>
                            </h1>
                        </div>
                        <group>
                            <group>

                                <field name="customer_id"
                                       widget="res_partner_many2one"
                                       context="{'res_partner_search_mode': 'customer',
                                        'show_address': 1, 'show_vat': True}"
                                       options='{"always_reload": True}'/>
                                <field name="vehicle_id"/>
                                <field name="request_date"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="rent" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="period" readonly="True"
                                       force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models rent vehicle -->
        <record model="ir.actions.act_window"
                id="vechicle_rental.action_window">
            <field name="name">VehicleRental</field>
            <field name="res_model">vehicle.rental</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_filter_by_available":1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Vehicle rental
                </p>
            </field>
        </record>

        <!--        action opening views o model Rent Request-->
        <record id="vehicle_request" model="ir.actions.act_window">
            <field name="name">RentRequest</field>
            <field name="res_model">vehicle.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Vehicle rental Request
                </p>
            </field>
        </record>
        <!--  Sequence menus that the listed order -->
        <menuitem id="vehicle_home" name="Vehicle Rental" sequence="1"/>
        <menuitem id="vehicle" name="Rent Vehicles" parent="vehicle_home"
                  action="vechicle_rental.action_window"/>
        <menuitem id="request" name="Rent Request" parent="vehicle_home"
                  action="vehicle_request"/>
    </data>
</odoo>