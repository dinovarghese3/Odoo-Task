<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        inherit-->
        <record id="fleet_inherit_registration_inherit" model="ir.ui.view">
            <field name="name">fleet.inherit.registrations</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <field name="first_contract_date" position="replace">
                    <field name="registration_date"/>
                </field>

            </field>
        </record>
        <!--        Group by and filter view-->
        <record id="vehicle_rental_group_by" model="ir.ui.view">
            <field name="name">vehicle.rental.group.view</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <search string="vehicle rent search">
                    <!--                    Search field-->
                    <field name="name"
                           filter_domain="['|',('name','ilike',self),
                           ('brand_id','ilike',self)]"/>
                    <!--                    Group by-->
                    <group expand="1" string="Group by model">
                        <filter name="group_by_model" string="Model" domain="[]"
                                context="{'group_by':'model'}"/>
                        <filter name="_brand" string="Brand" domain="[]"
                                context="{'group_by':'brand_id'}"/>
                    </group>
                    <!--                    filter view-->
                    <filter name="filter_by_available" string="Available"
                            domain="[('state', '=','available')]"/>
                    <filter name="filter_by_notavailable" string="Not Available"
                            domain="[('state', '=','notavailable')]"/>

                </search>
            </field>
        </record>
        <!--        kanban-->
        <record id="vehicle_kanban" model="ir.ui.view">
            <field name="name">vehicle.rental.kanban</field>
            <field name="model">vehicle.rental</field>

            <field name="arch" type="xml">
                <kanban class="vehicle_kanban_view" string="Rental">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="brand_id"/>
                    <field name="registration_date"/>
                    <field name="model"/>
                    <field name="rent"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                               <strong>
                                   <div class="oe_kanban_project_list o_kanban_record_subtitle">
                                       <field name="name"/>
                                   </div>
                               </strong>
                                <div>
                                     Brand :<field name="brand_id"/>
                                </div>
                                <div>
                                    Type:<field name="vehicle_id"/>
                                </div>
                                <div>
                                    <field name="currency_id" invisible="True"/>
                                    <field name="rent" widget="monetary"
                                         options="
                                         {'currency_field': 'currency_id'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--        Tree view-->
        <record id="vehicle_tree" model="ir.ui.view">
            <field name="name">vehicle.rental.tree</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="brand_id"/>
                    <field name="registration_date" optional="hide"/>
                    <field name="model" optional="hide"/>
                    <field name="currency_id" invisible="True"/>
                    <field name="rent" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!--        form view -->
        <record id="vehicle_form" model="ir.ui.view">
            <field name="name">vehicle.rental.form</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <form string="Rental">
                    <header>
                        <field name="state" widget="statusbar"
                               options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>

                                <field name="vehicle_id"/>
                                <field name="brand_id"/>
                            </group>
                            <group>
                                <field name="registration_date"/>
                                <field name="model"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="rent" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- actions opening views on models rent vehicle -->
        <record model="ir.actions.act_window"
                id="vechicle_rental.action_window">
            <field name="name">RentRequest</field>
            <field name="res_model">vehicle.rental</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_filter_by_available":1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Vehicle rental
                </p>
            </field>
        </record>
<!--        action opening views o model Rent Request-->
        <!--  Sequence menus that the listed order -->
        <menuitem id="vehicle_home" name="Vehicle Rental" sequence="1"/>
        <menuitem id="vehicle" name="Rent Vehicles" parent="vehicle_home"
                  action="vechicle_rental.action_window"/>
        <menuitem id="request" name="Rent Request" parent="vehicle_home"
                  action="vechicle_rental.action_window"/>
    </data>
</odoo>