<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        kanban-->
        <record id="vehicle_kanban" model="ir.ui.view">
            <field name="name">vehicle.rental.kanban</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <kanban class="vehicle_kanban_view" string="Rental">
                    <field name="name"/>
                    <field name="vehicle"/>
                    <field name ="brand"/>
                    <field name="registration_date"/>
                    <field name="model"/>
                    <field name="rent"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="vehicle_kanban_view_global_click">
                                <div class="vehicle_kanban_view_details">
                                    <strong class="o_kanban_record_title" >
                                    <field name="name" widget="res_partner_many2one"/>
                                    </strong>
                                 </div>
                                <div>
                                    Type  : <field name="vehicle"/>
                                </div>
                                <div class="vehicle_kanban_view_other_details">
                                    Brand : <field name ="brand"/>
                                </div>
                                <div>
                                    Rent Amount : <field name="rent"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
<!--        Tree view-->
        <record id="vehicle_tree" model="ir.ui.view">
            <field name="name">vehicle.rental.tree</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental">
                    <field name="name"/>
                    <field name="vehicle"/>
                    <field name ="brand"/>
                    <field name="registration_date"/>
                    <field name="model"/>
                    <field name="rent"/>
                </tree>
            </field>
        </record>
<!--        form view -->
        <record id="vehicle_form" model="ir.ui.view">
            <field name="name">vehicle.rental.form</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <form string="Rental">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="vehicle" />
                                <field name="brand"/>
                            </group>
                            <group>
                                <field name="registration_date"/>
                                <field name="model"/>
                                <field name="rent"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
</record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="vechicle_rental.action_window">
      <field name="name">Rental</field>
      <field name="res_model">vehicle.rental</field>

      <field name="view_mode">tree,form,kanban</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a Vehicle rental
        </p>
      </field>
    </record>

<!--  Sequnce menas that the listed order -->
      <menuitem id="vehicle_home" name="Vehicle Rental" sequence = "1"/>
      <menuitem id="vehicle" name="Rent Vehicles" parent="vehicle_home" action="vechicle_rental.action_window"/>

    </data>
</odoo>