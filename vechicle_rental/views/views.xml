<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        Tree view-->
        <record id="vehicle_tree" model="ir.ui.view">
            <field name="name">vehicle.rental.tree</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental">
                    <field name="name"/>
                    <field name="vehicle_type"/>
                    <field name ="vehicle"/>
                </tree>
            </field>
</record>
<!--        form view -->
        <record id="vehicle_form" model="ir.ui.view">
            <field name="name">vehicle.rental.form</field>
            <field name="model">vehicle.rental</field>
            <field name="arch" type="xml">
                <form string="Rental">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="vehicle" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="vehicle_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
</record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="vechicle_rental.action_window">
      <field name="name">vechicle_rental window</field>
      <field name="res_model">vehicle.rental</field>

      <field name="view_mode">tree,form,kanban</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a Vehicle rental
        </p>
      </field>
    </record>

<!--  Sequnce menas that the listed order -->
      <menuitem id="vehicle_home" name="Vehicle Rental" sequence = "1"/>
      <menuitem id="vehicle" name="Vehicle Rental Details" parent="vehicle_home" action="vechicle_rental.action_window"/>

    </data>
</odoo>