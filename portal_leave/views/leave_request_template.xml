    <template id="request_leave_apply" name="Leave Request website">
        <t t-call="website.layout">
            <div class="oe_structure">
                <input type="hidden" name="csrf_token"
                       t-att-value="request.csrf_token()"/>
                <div class="container">

                    <br/>
                    <center><h3> New Leave Request</h3></center>

                    <a href="/leave" style="color:white">
                        <button type="object"
                                class="btn btn-secondary">
                            All Leaves</button>
                    </a>

                    <br/><br/>

                    <div class="row">
                        <div class="col-lg-8 col-xl-7 mr-lg-auto">
                            <div class="oe_structure" data-oe-model="ir.ui.view"
                                 data-oe-id="1874" data-oe-field="arch"
                                 data-oe-xpath="/t[1]/t[1]/div[1]/div[2]/div[1]/div[1]/div[1]">

                            </div>
                            <div id="contactus_section" data-oe-id="2194"
                                 data-oe-xpath="/data/xpath/div"
                                 data-oe-model="ir.ui.view"
                                 data-oe-field="arch">
                                <section class="s_website_form" data-vcss="001"
                                         data-snippet="s_website_form">
                                    <div class="container">
                                        <form id="contactus_form"
                                              action="/leave/request/submit"
                                              method="post"
                                              class="o_mark_required"
                                              data-mark="*">
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div class="form-group col-12 s_website_form_field s_website_form_custom s_website_form_required"
                                                     data-type="char"
                                                     data-name="Field">
                                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                                               style="width: 200px"
                                                               for="contact1">
                                                            <span class="s_website_form_label_content">
                                                                Leave
                                                                Type</span>
                                                            <span class="s_website_form_mark">
                                                                *</span>
                                                        </label>
                                                        <div class="col-sm">
                                                            <!--                                                            <input id="contact1"-->
                                                            <!--                                                                   type="text"-->
                                                            <!--                                                                   class="form-control s_website_form_input"-->
                                                            <!--                                                                   name="leave_type"-->
                                                            <!--                                                                   required=""/>-->
                                                            <select name="leave_type"
                                                                    class="form-control s_website_form_input"
                                                                    id="leave_type_time_off_from_other_model">
                                                                <t t-foreach="leave_type"
                                                                   t-as="each">
                                                                    <option>
                                                                        <t t-esc="each.name"
                                                                           t-value="each.id"/>
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                                     data-type="email"
                                                     data-name="Field">
                                                    <div class="form-row">
                                                        <label class="col-form-label col-md-3.5"
                                                               style="width: 200px"
                                                               for="contact3">
                                                            <span class="s_website_form_label_content">
                                                                Dates</span>
                                                            <span class="s_website_form_mark">
                                                                *</span>
                                                        </label>

                                                        <span class="form-group col-md-4">
                                                            <input id="start_date_leave"
                                                                   type="date"
                                                                   class="form-control "
                                                                   name="start_date"
                                                                   required=""/>
                                                        </span>
                                                        <span class="form-group col-md-4">
                                                            <input id="end_date_leave"
                                                                   type="date"
                                                                   class="form-control "
                                                                   name="end_date"
                                                                   />
                                                            <select class="form-control s_website_form_input"
                                                                    id="time_period">
                                                                <option value="am">
                                                                    Afternoon</option>
                                                                <option value="pm">
                                                                    Morning</option>
                                                            </select>
                                                        </span>
                                                        <span class="form-group col-md-auto">
                                                            <!--                                                            <input id="end_date_leave"-->
                                                            <!--                                                                   type="date"-->
                                                            <!--                                                                   class="form-control "-->
                                                            <!--                                                                   name="date_type"-->
                                                            <!--                                                                   required=""/>-->

                                                        </span>
                                                    </div>
                                                </div>
                                                <!--                                                <div class="form-group col-12 s_website_form_field s_website_form_required"-->
                                                <!--                                                     data-type="email"-->
                                                <!--                                                     data-name="Field">-->
                                                <!--                                                    <div class="row s_col_no_resize s_col_no_bgcolor"  >-->
                                                <!--                                                        <label class="col-form-label col-sm-auto s_website_form_label"-->
