<odoo>
  <data>
      <record id="product_product_brand" model="ir.ui.view">
          <field name="name">product.brand.inherit</field>
          <field name="model">product.product</field>
          <field name="inherit_id" ref="product.product_normal_form_view"/>
          <field name="arch" type="xml">
          <field name="type" position="after">
              <field name="brand_name_id"/>
          </field>
          </field>
      </record>
      <record id="product_product_brand_temp" model="ir.ui.view">
          <field name="name">product.brand.inherit.temp</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_only_form_view"/>
          <field name="arch" type="xml">
          <field name="type" position="after">
              <field name="brand_name_id"/>
          </field>
          </field>
      </record>
  </data>
</odoo>